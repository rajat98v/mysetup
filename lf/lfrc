# Basic vars
set shell zsh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10
set color256
set icons
set period 1
set hidden on


map s quit
map gh cd ~
map gd cd ~/Downloads
map gD cd ~/Desktop
map gw cd ~/workspace
map gn cd ~/workspace/Notes
map ge cd ~/STORAGE
map gm cd ~/STORAGE/New-Volume-1/music
map gp cd ~/workspace/Projects

map gc cd ~/mysetup
map gC cd ~/.config
map gs cd ~/Pictures
map gp cd ~/workspace/Projects


map gg top


map y # deletes the copy command at y
map yy copy
map yp $echo $f | xclip -sel clip
map yn $basename $f | xclip -sel clip

map d # deletes the d command to cut
map dd cut
map dD delete

map D delete
map C copyto
map M moveto
map <c-n> push $mkdir<space>
map <c-r> reload
map <enter> shell
map x $$f
map X !$f
map o &mimeopen $f
map O $mimeopen --ask $f
map v $vlc $f

map A rename # at the very end
map c push A<c-u> # new rename
map I push A<c-a> # at the very beginning
map i push A<a-b><a-b><a-f> # before extention
map a push A<a-b> # after extention
map b bulkrename

map <c-e> down
map <c-y> up
map V push :!nvim<space>

